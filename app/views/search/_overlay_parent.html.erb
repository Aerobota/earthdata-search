<section id="master-overlay-parent" class="master-overlay-parent">
  <h1 class="branding">
    <a class="nasa-logo" href="<%= root_path %>" title="Earthdata Search Home"></a>
    <%= portal_logo %>
    <a class="site-logo" href="<%=edsc_path root_path %>">
      <span class="site-logo-org"><%= site_logo_org %></span>
      <%= site_logo_title %>
    </a>
    <% unless Rails.configuration.logo_name.blank? %>
      <span class="version-badge"><%= Rails.configuration.logo_name %></span>
    <% end %>
  </h1>
  <header>
    <h2>
      Browse Collections
      <a class="master-overlay-close master-overlay-hide-parent" data-bind="click: hideParent" href="#" title="close"><i class="fa fa-times-circle"></i></a>
    </h2>
  </header>
  <div class="master-overlay-content panel-group">
    <!-- ko foreach: collections.facets.results -->
    <!-- ko if: children().length > 0 -->
    <div data-bind="css: class_name" class="panel panel-default">
      <div class="panel-heading">
        <h3 data-bind="click: toggleList" class="panel-title facet-group-title">
          <i data-bind="css: {'fa-chevron-down': closed(), 'fa-chevron-up': opened()}" class="fa pull-right panel-header-toggle"></i>
          <a data-bind="text: title, attr: {'data-target': '#collapse'+$index()}" href="#" ></a>
        </h3>
      </div>
      <div data-bind="attr: {id: 'collapse'+$index()}, css: {'facets-list-show': opened(), 'facets-list-hide': closed(), 'features-facet': name == 'Features'}">
        <div class="panel-body facets">
          <!-- ko foreach: children() -->
          <p class="facets-item" data-bind="click: $root.collections.facets.toggleFacet, css: {selected: isSelected(), 'facets-child': isChild(), 'facets-ancestor': isAncestor(), 'facets-parent': isParent()}, attr: {title: title}">
            <!--ko if: isAncestor() && !isParent() -->
              <i class="fa fa-chevron-left"></i>
            <!--/ko-->

            <span data-bind="text: title" class="facet-title"></span>
            <i class="fa fa-times"></i>
            <!-- ko ifnot: $parent.title == 'Features' || isAncestor() -->
            <span class="facet-item-collection-count" data-bind="text: count"></span>
            <!-- /ko -->
            <!-- ko if: title == 'Subsetting Services' -->
            <span class="facet-badge badge-subsetting"></span>
            <!-- /ko -->
            <!-- ko if: title == 'Map Imagery' -->
            <span class="facet-badge badge-gibs"></span>
            <!-- /ko -->
            <!-- ko if: title == 'Near Real Time' -->
            <span class="facet-badge badge-nrt"></span>
            <!-- /ko -->
          </p>
          <!--/ko-->
        </div>
      </div>
    </div>
    <!-- /ko -->
    <!-- /ko -->
  </div>
</section>
